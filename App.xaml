<Application
    x:Class="WPFBoilerPlate.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFBoilerPlate"
    xmlns:util="clr-namespace:WPFBoilerPlate.Utils">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Spacing.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Validation.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <util:LocalizationService x:Key="Loc" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
