<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  고정 간격  -->
    <GridLength x:Key="Grid.Spacing.XS">4</GridLength>
    <GridLength x:Key="Grid.Spacing.S">8</GridLength>
    <GridLength x:Key="Grid.Spacing.M">12</GridLength>
    <GridLength x:Key="Grid.Spacing.L">16</GridLength>
    <GridLength x:Key="Grid.Spacing.XL">24</GridLength>

    <!--  비율  -->
    <GridLength x:Key="Grid.Star.1">1*</GridLength>
    <GridLength x:Key="Grid.Star.2">2*</GridLength>

    <!--  Auto  -->
    <GridLength x:Key="Grid.Auto">Auto</GridLength>

    <!--  =========================  -->
    <!--  Spacing Values (Token)  -->
    <!--  =========================  -->

    <Thickness x:Key="Spacing.XS">4</Thickness>
    <Thickness x:Key="Spacing.S">8</Thickness>
    <Thickness x:Key="Spacing.M">12</Thickness>
    <Thickness x:Key="Spacing.L">16</Thickness>
    <Thickness x:Key="Spacing.XL">24</Thickness>

    <!--  방향별  -->
    <Thickness x:Key="Spacing.Vertical.M">0,12</Thickness>
    <Thickness x:Key="Spacing.Horizontal.M">12,0</Thickness>

    <!--  =========================  -->
    <!--  Common Control Styles  -->
    <!--  =========================  -->

    <Style x:Key="Margin.M" TargetType="FrameworkElement">
        <Setter Property="Margin" Value="{StaticResource Spacing.M}" />
    </Style>

    <Style x:Key="Margin.L" TargetType="FrameworkElement">
        <Setter Property="Margin" Value="{StaticResource Spacing.L}" />
    </Style>

    <Style x:Key="Padding.M" TargetType="Control">
        <Setter Property="Padding" Value="{StaticResource Spacing.M}" />
    </Style>

    <Style x:Key="Padding.L" TargetType="Control">
        <Setter Property="Padding" Value="{StaticResource Spacing.L}" />
    </Style>

</ResourceDictionary>
