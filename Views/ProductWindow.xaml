<Window
    x:Class="WPFBoilerPlate.Views.ProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFBoilerPlate.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WPFBoilerPlate.ViewModels"
    Title="ProductWindow"
    Width="auto"
    Height="auto"
    d:DataContext="{d:DesignInstance vm:ProductViewModel}"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Content="Category"
                    Target="{Binding ElementName=CategoryNameTextBox}" />
                <ComboBox
                    x:Name="CategoryNameTextBox"
                    Grid.Row="0"
                    Grid.Column="2"
                    MinWidth="100"
                    DisplayMemberPath="Name"
                    IsReadOnly="True"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding Category, Mode=TwoWay}" />

                <Label
                    Grid.Row="2"
                    Content="Name"
                    Target="{Binding ElementName=NameTextBox}" />
                <TextBox
                    x:Name="NameTextBox"
                    Grid.Row="2"
                    Grid.Column="2"
                    Text="{Binding Name, Mode=TwoWay}" />
            </Grid>

            <Grid Grid.Row="2" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Button Command="{Binding UpdateProductCommand}" Content="Update" />
                <Button
                    Grid.Column="2"
                    Command="{Binding DeleteProductCommand}"
                    Content="Delete" />
            </Grid>

        </Grid>
    </Border>
</Window>
