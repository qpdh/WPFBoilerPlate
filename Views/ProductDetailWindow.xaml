<Window
    x:Class="WPFBoilerPlate.Views.ProductDetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFBoilerPlate.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WPFBoilerPlate.ViewModels"
    Title="{Binding [Title_ProductDetailWindow], Source={StaticResource Loc}}"
    Width="440"
    Height="auto"
    d:DataContext="{d:DesignInstance vm:ProductViewModel}"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Border Padding="{StaticResource Spacing.M}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="{StaticResource Grid.Spacing.M}" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="{StaticResource Grid.Spacing.S}" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="{StaticResource Grid.Spacing.S}" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Content="{Binding [Label_Category], Source={StaticResource Loc}}"
                    Target="{Binding ElementName=CategoryNameTextBox}" />
                <ComboBox
                    x:Name="CategoryNameTextBox"
                    Grid.Row="0"
                    Grid.Column="2"
                    MinWidth="100"
                    DisplayMemberPath="Name"
                    IsReadOnly="True"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding Category, Mode=TwoWay}" />

                <Label
                    Grid.Row="2"
                    Content="{Binding [Label_ProductName], Source={StaticResource Loc}}"
                    Target="{Binding ElementName=NameTextBox}" />
                <TextBox
                    x:Name="NameTextBox"
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="340"
                    d:Text="MMMMMMMMMMMMMMMMMMMMMMMMMMMMMM"
                    Text="{Binding Name, Mode=TwoWay}" />
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="{StaticResource Grid.Spacing.S}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Command="{Binding UpdateProductCommand}" Content="{Binding [Button_Update], Source={StaticResource Loc}}" />
                <Button
                    Grid.Column="2"
                    Command="{Binding DeleteProductCommand}"
                    Content="{Binding [Button_Delete], Source={StaticResource Loc}}" />
            </Grid>

        </Grid>
    </Border>
</Window>
