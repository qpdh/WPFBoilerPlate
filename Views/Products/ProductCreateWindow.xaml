<Window
    x:Class="WPFBoilerPlate.Views.ProductCreateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WPFBoilerPlate.Views"
    Loaded="Window_Loaded"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:WPFBoilerPlate.Utils"
    xmlns:vm="clr-namespace:WPFBoilerPlate.ViewModels"
    Title="{Binding [Title_CreateProduct], Source={StaticResource Loc}}"
    Width="auto"
    Height="auto"
    d:DataContext="{d:DesignInstance vm:ProductCreateViewModel}"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding InitializeCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border Padding="{StaticResource Spacing.M}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="{StaticResource Grid.Spacing.M}" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="{StaticResource Grid.Spacing.S}" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="{StaticResource Grid.Spacing.S}" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Content="{Binding [Label_Category], Source={StaticResource Loc}}"
                    Target="{Binding ElementName=CategoryNameTextBox}" />
                <ComboBox
                    x:Name="CategoryNameTextBox"
                    Grid.Row="0"
                    Grid.Column="2"
                    MinWidth="100"
                    DisplayMemberPath="Name"
                    IsReadOnly="True"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding Category}" />

                <Label
                    Grid.Row="2"
                    Content="{Binding [Label_ProductName], Source={StaticResource Loc}}"
                    Target="{Binding ElementName=NameTextBox}" />
                <TextBox
                    x:Name="NameTextBox"
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="340"
                    VerticalContentAlignment="Center"
                    d:Text="MMMMMMMMMMMMMMMMMMMMMMMMMMMMMM"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />
            </Grid>

            <UniformGrid Grid.Row="2">
                <Button Command="{Binding CreateProductCommand}" Content="{Binding [Button_Create], Source={StaticResource Loc}}" />
            </UniformGrid>
        </Grid>
    </Border>
</Window>