<Window
    x:Class="WPFBoilerPlate.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WPFBoilerPlate.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WPFBoilerPlate"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WPFBoilerPlate.ViewModels"
    Title="{Binding [Title_MainWindow], Source={StaticResource Loc}}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance vm:MainViewModel}"
    Loaded="Window_Loaded"
    mc:Ignorable="d">

    <Border Padding="{StaticResource Spacing.M}">
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="{StaticResource Grid.Spacing.M}" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <ListView
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    ItemsSource="{Binding Products}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    SelectedItem="{Binding SelectedProduct}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding ItemDoubleClickCommand}" CommandParameter="{Binding SelectedProduct}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding ProductId}" Header="ProductId" />
                            <GridViewColumn DisplayMemberBinding="{Binding Category.Name}" Header="Category" />
                            <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" />
                            <GridViewColumn DisplayMemberBinding="{Binding CreatedAt}" Header="CreatedAt" />
                            <GridViewColumn DisplayMemberBinding="{Binding UpdatedAt}" Header="UpdatedAt" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <Grid Grid.Row="2">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding CreateProductCommand}"
                        Content="{Binding [Button_CreateProduct], Source={StaticResource Loc}}" />
                    <Button
                        HorizontalAlignment="Right"
                        Command="{Binding ChangeLanguageCommand}"
                        Content="{Binding [Button_ChangeLanguage], Source={StaticResource Loc}}" />
                </Grid>
            </Grid>

            <controls:LoadingOverlay />
        </Grid>
    </Border>
</Window>